(import "turtle.limo")

(defun koch-line (len lvl)
  (if (= lvl 0)
      (turtle-forward len)
      (progn
       (koch-line (/ len 3) (- lvl 1))
       (turtle-left 60)
       (koch-line (/ len 3) (- lvl 1))
       (turtle-right 120)
       (koch-line (/ len 3) (- lvl 1))
       (turtle-left 60)
       (koch-line (/ len 3) (- lvl 1)))))

(defun koch-star (len lvl)
  (for-each x (drange 0 3 1)
    (koch-line 150 4)
    (turtle-right 120)))
